@model IEnumerable<MovieStoreMVC.Models.Domain.Genre>;

<div class="tbl-container">
    <h2>Genres</h2>

    <table>
        <tr>
            <th>Name</th>
            <th>Action</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.GenreName</td>
                <td>
                    <a href="/genre/Edit?id=@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>
                    <a onclick="return window.confirm('Are you sure? @item.GenreName')" href="/Genre/Delete?id=@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
            </tr>
        }
        
       
    </table>
    <div class="input-container">
        <a href="/Genre/add" class="btn btn-sec">Back</a>
    </div>
</div>
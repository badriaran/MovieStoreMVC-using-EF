@model MovieStoreMVC.Models.Domain.Genre;


<form class="w-40" action="/Genre/add" method="post">
    <h2 class="pb-10">Add Genre</h2>
    <div class="input-container">
        <label asp-for="GenreName" class="w-40">GenreName</label>
        <input type="text" asp-for="GenreName">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="GenreName"></span>
    </div>



    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }



    <div class="input-container">
        <button class="btn btn-default" type="submit">Add</button>
        <a class="btn btn-sec" href="/Genre/GenreList">All Record</a>

    </div>
</form>
